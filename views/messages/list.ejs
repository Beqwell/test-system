<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Messages â€” EduPlatform</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="/css/messages.css" />
</head>
<body>
  <div class="container">
    <h1>ğŸ“© Messages for <%= username %></h1>

    <% if (messages.length === 0) { %>
      <p class="no-msg">You have no messages.</p>
    <% } else { %>
      <ul class="message-list">
        <% messages.forEach(m => { %>
          <li class="message-item <%= m.is_read ? 'read' : 'unread' %>">
            <div class="message-header">
              <strong><%= m.teacher_name %></strong> â€” <em><%= m.course_name %></em>
              <small><%= new Date(m.created_at).toLocaleString() %></small>
            </div>
            <p class="message-content"><%= m.content %></p>

            <div class="message-footer">
              <% if (!m.is_read) { %>
                <form method="POST" action="/messages/read/<%= m.id %>">
                  <button type="submit" class="mark-btn">âœ… Mark as read</button>
                </form>
              <% } else { %>
                <span class="read-indicator">âœ“ Read</span>
              <% } %>
            </div>
          </li>
        <% }) %>
      </ul>
    <% } %>

    <div class="back-btn">
      <a href="/dashboard">â† Back to Dashboard</a>
    </div>
  </div>
</body>
</html>
