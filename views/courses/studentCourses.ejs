  <!-- Main -->
  <main class="main">
    <div class="header">
      <div class="welcome">Welcome, <%= username %> <small>(Student)</small></div>
      <%- include('../partials/messageBell', { allMessages }) %>
      <form class="join-course-form" method="POST" action="/join-course">
        <input type="text" name="join_code" placeholder="Join code..." required />
        <button type="submit">Join</button>
      </form>   
    </div>
  
    <div class="section">
      <h2>My Courses</h2>
      <% if (courses.length === 0) { %>
        <p>You havenâ€™t joined any courses yet.</p>
      <% } else { %>
        <div class="courses-list">
          <% courses.forEach(course => { %>
            <div class="course-card">
              <div class="course-left">
                <div class="course-icon">ğŸ“˜</div>
                <div class="course-content">
                  <h3 class="course-title"><%= course.name %></h3>
                  <div class="course-meta">
                    ğŸ‘¨â€ğŸ« <strong>Teacher:</strong> <%= course.teacher_name %><br>
                    ğŸ“… <strong>Created:</strong> <%= course.created_at %><br>
                    ğŸ“ <strong>Tests:</strong> <%= course.test_count %>
                  </div>
                  <div class="course-status">Status: Active</div>
                </div>
              </div>
              <div class="course-actions">
                <a href="/course/<%= course.id %>/tests">Go to Tests</a>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>
  </main>

  <%- include('../partials/reminderPopup', { reminderTests }) %>

  <script>
    function toggleMenu() {
      const sidebar = document.getElementById('sidebar');
      sidebar.classList.toggle('active');
    }
  </script>
</body>
</html>
